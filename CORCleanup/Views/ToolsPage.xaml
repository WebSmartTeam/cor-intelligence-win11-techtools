<Page x:Class="CORCleanup.Views.ToolsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Tools">

    <Grid Margin="12,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0"
                    SelectedIndex="{Binding ViewModel.SelectedTabIndex}">

            <!-- ============================================================ -->
            <!-- TAB 1: File Hash Checker -->
            <!-- ============================================================ -->
            <TabItem Header="File Hash Checker">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel Margin="16">

                        <!-- File selection -->
                        <TextBlock Text="Select a file to compute its hash values"
                                   Opacity="0.7" Margin="0,0,0,8" />
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ui:TextBox Grid.Column="0"
                                        PlaceholderText="File path..."
                                        Text="{Binding ViewModel.HashFilePath, UpdateSourceTrigger=PropertyChanged}"
                                        Margin="0,0,8,0" />
                            <ui:Button Grid.Column="1"
                                       Content="Browse"
                                       Command="{Binding ViewModel.BrowseFileCommand}"
                                       Margin="0,0,8,0" />
                            <ui:Button Grid.Column="2"
                                       Content="Compute Hashes"
                                       Appearance="Primary"
                                       Command="{Binding ViewModel.ComputeHashCommand}" />
                        </Grid>

                        <!-- Progress -->
                        <ProgressBar Value="{Binding ViewModel.HashProgress}"
                                     Maximum="100"
                                     Height="6"
                                     Margin="0,0,0,16"
                                     Visibility="{Binding ViewModel.IsHashing, Converter={StaticResource BoolToVis}}" />

                        <!-- Hash results -->
                        <ui:Card Padding="16" Margin="0,0,0,16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="MD5"
                                           FontWeight="SemiBold" Margin="0,0,0,6" />
                                <TextBox Grid.Row="0" Grid.Column="1"
                                         Text="{Binding ViewModel.HashMd5, Mode=OneWay}"
                                         IsReadOnly="True"
                                         FontFamily="Consolas" FontSize="12"
                                         Margin="0,0,0,6" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="SHA1"
                                           FontWeight="SemiBold" Margin="0,0,0,6" />
                                <TextBox Grid.Row="1" Grid.Column="1"
                                         Text="{Binding ViewModel.HashSha1, Mode=OneWay}"
                                         IsReadOnly="True"
                                         FontFamily="Consolas" FontSize="12"
                                         Margin="0,0,0,6" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="SHA256"
                                           FontWeight="SemiBold" Margin="0,0,0,6" />
                                <TextBox Grid.Row="2" Grid.Column="1"
                                         Text="{Binding ViewModel.HashSha256, Mode=OneWay}"
                                         IsReadOnly="True"
                                         FontFamily="Consolas" FontSize="12"
                                         Margin="0,0,0,6" />

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="File Size"
                                           FontWeight="SemiBold" />
                                <TextBlock Grid.Row="3" Grid.Column="1"
                                           Text="{Binding ViewModel.HashFileSize}" />
                            </Grid>
                        </ui:Card>

                        <!-- Verification -->
                        <ui:Card Padding="16">
                            <StackPanel>
                                <TextBlock Text="Verify Against Known Hash"
                                           FontWeight="SemiBold" Margin="0,0,0,8" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <ui:TextBox Grid.Column="0"
                                                PlaceholderText="Paste expected hash value here..."
                                                Text="{Binding ViewModel.VerifyHash, UpdateSourceTrigger=PropertyChanged}"
                                                FontFamily="Consolas"
                                                FontSize="12"
                                                Margin="0,0,8,0" />
                                    <ui:Button Grid.Column="1"
                                               Content="Verify"
                                               Command="{Binding ViewModel.VerifyHashMatchCommand}" />
                                </Grid>
                                <TextBlock Text="{Binding ViewModel.VerifyResult}"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Margin="0,8,0,0" />
                            </StackPanel>
                        </ui:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 2: Password Generator -->
            <!-- ============================================================ -->
            <TabItem Header="Password Generator">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel Margin="16" MaxWidth="500" HorizontalAlignment="Left">

                        <TextBlock Text="Generate a cryptographically secure password"
                                   Opacity="0.7" Margin="0,0,0,16" />

                        <!-- Length -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Length"
                                       VerticalAlignment="Center" FontWeight="SemiBold" />
                            <Slider Grid.Column="1"
                                    Value="{Binding ViewModel.PasswordLength}"
                                    Minimum="8" Maximum="128"
                                    TickFrequency="1"
                                    IsSnapToTickEnabled="True" />
                            <TextBlock Grid.Column="2"
                                       Text="{Binding ViewModel.PasswordLength}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       FontWeight="SemiBold" />
                        </Grid>

                        <!-- Options -->
                        <ui:Card Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <CheckBox Content="Include uppercase (A-Z)"
                                          IsChecked="{Binding ViewModel.IncludeUppercase}"
                                          Margin="0,0,0,6" />
                                <CheckBox Content="Include lowercase (a-z)"
                                          IsChecked="{Binding ViewModel.IncludeLowercase}"
                                          Margin="0,0,0,6" />
                                <CheckBox Content="Include numbers (0-9)"
                                          IsChecked="{Binding ViewModel.IncludeNumbers}"
                                          Margin="0,0,0,6" />
                                <CheckBox Content="Include symbols (!@#$%...)"
                                          IsChecked="{Binding ViewModel.IncludeSymbols}"
                                          Margin="0,0,0,6" />
                                <CheckBox Content="Exclude ambiguous characters (0O, 1lI)"
                                          IsChecked="{Binding ViewModel.ExcludeAmbiguous}" />
                            </StackPanel>
                        </ui:Card>

                        <!-- Generate -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <ui:Button Content="Generate Password"
                                       Appearance="Primary"
                                       Command="{Binding ViewModel.GeneratePasswordCommand}"
                                       MinWidth="150"
                                       Margin="0,0,8,0" />
                            <ui:Button Content="Copy"
                                       Command="{Binding ViewModel.CopyPasswordCommand}"
                                       MinWidth="80" />
                        </StackPanel>

                        <!-- Result -->
                        <ui:Card Padding="16">
                            <TextBox Text="{Binding ViewModel.GeneratedPassword, Mode=OneWay}"
                                     IsReadOnly="True"
                                     FontFamily="Consolas"
                                     FontSize="16" />
                        </ui:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 3: BSOD Crash History -->
            <!-- ============================================================ -->
            <TabItem Header="BSOD Viewer">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <ui:Button Content="Scan for Crash Dumps"
                                   Appearance="Primary"
                                   Command="{Binding ViewModel.LoadBsodCrashesCommand}"
                                   MinWidth="180" Margin="0,0,16,0" />
                        <TextBlock Text="Parses minidump files from C:\Windows\Minidump\"
                                   VerticalAlignment="Center" Opacity="0.5" FontSize="12" />
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding ViewModel.BsodCrashes}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date/Time" Binding="{Binding CrashTimeFormatted}" Width="160" />
                            <DataGridTextColumn Header="Bug Check Code" Binding="{Binding BugCheckCode}" Width="130">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="Consolas" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Bug Check Name" Binding="{Binding BugCheckName}" Width="*" />
                            <DataGridTextColumn Header="Faulting Module" Binding="{Binding FaultingDisplay}" Width="180" />
                            <DataGridTextColumn Header="Dump File" Binding="{Binding DumpFileName}" Width="140" />
                            <DataGridTextColumn Header="Size" Binding="{Binding DumpSizeFormatted}" Width="80" />
                        </DataGrid.Columns>

                        <!-- Row colour coding: red for critical errors -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow"
                                   BasedOn="{StaticResource {x:Type DataGridRow}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BugCheckName}" Value="CRITICAL_PROCESS_DIED">
                                        <Setter Property="Foreground" Value="#E06666" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding BugCheckName}" Value="KERNEL_SECURITY_CHECK_FAILURE">
                                        <Setter Property="Foreground" Value="#E06666" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 4: Software Inventory -->
            <!-- ============================================================ -->
            <TabItem Header="Software Inventory">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <ui:Button Content="Load Installed Software"
                                   Appearance="Primary"
                                   Command="{Binding ViewModel.LoadSoftwareCommand}"
                                   MinWidth="180" Margin="0,0,12,0" />
                        <ui:Button Content="Export CSV"
                                   Command="{Binding ViewModel.ExportSoftwareCsvCommand}"
                                   MinWidth="100" Margin="0,0,12,0" />
                        <CheckBox Content="Include system components"
                                  IsChecked="{Binding ViewModel.IncludeSystemComponents}"
                                  VerticalAlignment="Center" />
                    </StackPanel>

                    <!-- Search filter -->
                    <ui:TextBox Grid.Row="1"
                                PlaceholderText="Search by name or publisher..."
                                Text="{Binding ViewModel.SoftwareSearchFilter, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,12" />

                    <!-- Software list -->
                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding ViewModel.FilteredSoftware}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding DisplayName}" Width="*" />
                            <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" Width="180" />
                            <DataGridTextColumn Header="Version" Binding="{Binding DisplayVersion}" Width="120" />
                            <DataGridTextColumn Header="Installed" Binding="{Binding InstallDateFormatted}" Width="100" />
                            <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 5: AV Health Scanner -->
            <!-- ============================================================ -->
            <TabItem Header="AV Health">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <ui:Button Content="Scan for AV Products"
                                   Appearance="Primary"
                                   Command="{Binding ViewModel.ScanAntivirusCommand}"
                                   MinWidth="180" Margin="0,0,16,0" />
                        <TextBlock Text="Checks WMI, registry, services, and file system for installed and remnant AV"
                                   VerticalAlignment="Center" Opacity="0.5" FontSize="12" />
                    </StackPanel>

                    <!-- AV products grid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding ViewModel.AntivirusProducts}"
                              SelectedItem="{Binding ViewModel.SelectedAvProduct}"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="90" />
                            <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*" />
                            <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" Width="140" />
                            <DataGridTextColumn Header="Enabled" Binding="{Binding EnabledDisplay}" Width="70" />
                            <DataGridTextColumn Header="Up to Date" Binding="{Binding UpToDateDisplay}" Width="80" />
                            <DataGridTextColumn Header="Remnants" Binding="{Binding RemnantCount}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>

                        <!-- Row colour coding by status -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow"
                                   BasedOn="{StaticResource {x:Type DataGridRow}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StatusDisplay}" Value="Active">
                                        <Setter Property="Foreground" Value="#4CAF50" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusDisplay}" Value="Installed">
                                        <Setter Property="Foreground" Value="#2196F3" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusDisplay}" Value="Remnant">
                                        <Setter Property="Foreground" Value="#FF9800" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusDisplay}" Value="Conflict">
                                        <Setter Property="Foreground" Value="#F44336" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>

                    <!-- Remnant details panel -->
                    <Expander Grid.Row="2"
                              Header="Remnant Details"
                              Margin="0,12,0,0"
                              Visibility="{Binding ViewModel.SelectedAvProduct.HasRemnants, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}">
                        <StackPanel Margin="16,8">
                            <TextBlock Text="{Binding ViewModel.SelectedAvProduct.RemnantSummary}"
                                       FontWeight="SemiBold" Margin="0,0,0,8" />

                            <!-- Remnant folders -->
                            <TextBlock Text="Folders:" FontWeight="SemiBold" Margin="0,4,0,2" />
                            <ItemsControl ItemsSource="{Binding ViewModel.SelectedAvProduct.RemnantPaths}"
                                          Margin="16,0,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="12" Opacity="0.8" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Remnant services -->
                            <TextBlock Text="Services:" FontWeight="SemiBold" Margin="0,8,0,2" />
                            <ItemsControl ItemsSource="{Binding ViewModel.SelectedAvProduct.RemnantServices}"
                                          Margin="16,0,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="12" Opacity="0.8" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Remnant registry keys -->
                            <TextBlock Text="Registry keys:" FontWeight="SemiBold" Margin="0,8,0,2" />
                            <ItemsControl ItemsSource="{Binding ViewModel.SelectedAvProduct.RemnantRegistryKeys}"
                                          Margin="16,0,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="12"
                                                   TextWrapping="Wrap" Opacity="0.8" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Removal tool link -->
                            <TextBlock Margin="0,12,0,0"
                                       Visibility="{Binding ViewModel.SelectedAvProduct.RemovalToolUrl, Converter={StaticResource StringToVis}}">
                                <Run Text="Vendor removal tool: " FontWeight="SemiBold" />
                                <Run Text="{Binding ViewModel.SelectedAvProduct.RemovalToolUrl, Mode=OneWay}"
                                     Foreground="#2196F3" />
                            </TextBlock>
                        </StackPanel>
                    </Expander>
                </Grid>
            </TabItem>

        </TabControl>

        <!-- Status bar -->
        <TextBlock Grid.Row="1"
                   Text="{Binding ViewModel.StatusText}"
                   Opacity="0.6"
                   FontSize="12"
                   Margin="0,8,0,0" />
    </Grid>
</Page>
