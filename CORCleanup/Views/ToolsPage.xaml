<Page x:Class="CORCleanup.Views.ToolsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:CORCleanup.ViewModels"
      Title="Tools"
      Background="{DynamicResource ApplicationBackgroundBrush}">

    <Grid Margin="12,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0"
                    SelectedIndex="{Binding ViewModel.SelectedTabIndex}">

            <!-- ============================================================ -->
            <!-- TAB 1: File Hash Checker -->
            <!-- ============================================================ -->
            <TabItem Header="File Hash Checker">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel Margin="16">

                        <!-- File selection -->
                        <TextBlock Text="Select a file to compute its hash values"
                                   Opacity="0.7" Margin="0,0,0,8" />
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ui:TextBox Grid.Column="0"
                                        PlaceholderText="File path..."
                                        Text="{Binding ViewModel.HashFilePath, UpdateSourceTrigger=PropertyChanged}"
                                        Margin="0,0,8,0" />
                            <ui:Button Grid.Column="1"
                                       Content="Browse"
                                       Command="{Binding ViewModel.BrowseFileCommand}"
                                       Margin="0,0,8,0" />
                            <ui:Button Grid.Column="2"
                                       Content="Compute Hashes"
                                       Appearance="Primary"
                                       Command="{Binding ViewModel.ComputeHashCommand}" />
                        </Grid>

                        <!-- Progress -->
                        <ProgressBar Value="{Binding ViewModel.HashProgress}"
                                     Maximum="100"
                                     Height="6"
                                     Margin="0,0,0,16"
                                     Visibility="{Binding ViewModel.IsHashing, Converter={StaticResource BoolToVis}}" />

                        <!-- Hash results -->
                        <ui:Card Padding="16" Margin="0,0,0,16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="MD5"
                                           FontWeight="SemiBold" Margin="0,0,0,6" />
                                <TextBox Grid.Row="0" Grid.Column="1"
                                         Text="{Binding ViewModel.HashMd5, Mode=OneWay}"
                                         IsReadOnly="True"
                                         FontFamily="Consolas" FontSize="12"
                                         Margin="0,0,0,6" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="SHA1"
                                           FontWeight="SemiBold" Margin="0,0,0,6" />
                                <TextBox Grid.Row="1" Grid.Column="1"
                                         Text="{Binding ViewModel.HashSha1, Mode=OneWay}"
                                         IsReadOnly="True"
                                         FontFamily="Consolas" FontSize="12"
                                         Margin="0,0,0,6" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="SHA256"
                                           FontWeight="SemiBold" Margin="0,0,0,6" />
                                <TextBox Grid.Row="2" Grid.Column="1"
                                         Text="{Binding ViewModel.HashSha256, Mode=OneWay}"
                                         IsReadOnly="True"
                                         FontFamily="Consolas" FontSize="12"
                                         Margin="0,0,0,6" />

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="File Size"
                                           FontWeight="SemiBold" />
                                <TextBlock Grid.Row="3" Grid.Column="1"
                                           Text="{Binding ViewModel.HashFileSize}" />
                            </Grid>
                        </ui:Card>

                        <!-- Verification -->
                        <ui:Card Padding="16">
                            <StackPanel>
                                <TextBlock Text="Verify Against Known Hash"
                                           FontWeight="SemiBold" Margin="0,0,0,8" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <ui:TextBox Grid.Column="0"
                                                PlaceholderText="Paste expected hash value here..."
                                                Text="{Binding ViewModel.VerifyHash, UpdateSourceTrigger=PropertyChanged}"
                                                FontFamily="Consolas"
                                                FontSize="12"
                                                Margin="0,0,8,0" />
                                    <ui:Button Grid.Column="1"
                                               Content="Verify"
                                               Command="{Binding ViewModel.VerifyHashMatchCommand}" />
                                </Grid>
                                <TextBlock Text="{Binding ViewModel.VerifyResult}"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Margin="0,8,0,0" />
                            </StackPanel>
                        </ui:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 2: Password Generator -->
            <!-- ============================================================ -->
            <TabItem Header="Password Generator">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel Margin="16" MaxWidth="500" HorizontalAlignment="Left">

                        <TextBlock Text="Generate a cryptographically secure password"
                                   Opacity="0.7" Margin="0,0,0,16" />

                        <!-- Length -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Length"
                                       VerticalAlignment="Center" FontWeight="SemiBold" />
                            <Slider Grid.Column="1"
                                    Value="{Binding ViewModel.PasswordLength}"
                                    Minimum="8" Maximum="128"
                                    TickFrequency="1"
                                    IsSnapToTickEnabled="True" />
                            <TextBlock Grid.Column="2"
                                       Text="{Binding ViewModel.PasswordLength}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       FontWeight="SemiBold" />
                        </Grid>

                        <!-- Options -->
                        <ui:Card Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <CheckBox Content="Include uppercase (A-Z)"
                                          IsChecked="{Binding ViewModel.IncludeUppercase}"
                                          Margin="0,0,0,6" />
                                <CheckBox Content="Include lowercase (a-z)"
                                          IsChecked="{Binding ViewModel.IncludeLowercase}"
                                          Margin="0,0,0,6" />
                                <CheckBox Content="Include numbers (0-9)"
                                          IsChecked="{Binding ViewModel.IncludeNumbers}"
                                          Margin="0,0,0,6" />
                                <CheckBox Content="Include symbols (!@#$%...)"
                                          IsChecked="{Binding ViewModel.IncludeSymbols}"
                                          Margin="0,0,0,6" />
                                <CheckBox Content="Exclude ambiguous characters (0O, 1lI)"
                                          IsChecked="{Binding ViewModel.ExcludeAmbiguous}" />
                            </StackPanel>
                        </ui:Card>

                        <!-- Generate -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <ui:Button Content="Generate Password"
                                       Appearance="Primary"
                                       Command="{Binding ViewModel.GeneratePasswordCommand}"
                                       MinWidth="150"
                                       Margin="0,0,8,0" />
                            <ui:Button Content="Copy"
                                       Command="{Binding ViewModel.CopyPasswordCommand}"
                                       MinWidth="80" />
                        </StackPanel>

                        <!-- Result -->
                        <ui:Card Padding="16">
                            <TextBox Text="{Binding ViewModel.GeneratedPassword, Mode=OneWay}"
                                     IsReadOnly="True"
                                     FontFamily="Consolas"
                                     FontSize="16" />
                        </ui:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 3: BSOD Crash History -->
            <!-- ============================================================ -->
            <TabItem Header="BSOD Viewer">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <ui:Button Content="Scan for Crash Dumps"
                                   Appearance="Primary"
                                   Command="{Binding ViewModel.LoadBsodCrashesCommand}"
                                   MinWidth="180" Margin="0,0,16,0" />
                        <TextBlock Text="Parses minidump files from C:\Windows\Minidump\"
                                   VerticalAlignment="Center" Opacity="0.5" FontSize="12" />
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding ViewModel.BsodCrashes}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date/Time" Binding="{Binding CrashTimeFormatted}" Width="160" />
                            <DataGridTextColumn Header="Bug Check Code" Binding="{Binding BugCheckCode}" Width="130">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="Consolas" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Bug Check Name" Binding="{Binding BugCheckName}" Width="*" />
                            <DataGridTextColumn Header="Faulting Module" Binding="{Binding FaultingDisplay}" Width="180" />
                            <DataGridTextColumn Header="Dump File" Binding="{Binding DumpFileName}" Width="140" />
                            <DataGridTextColumn Header="Size" Binding="{Binding DumpSizeFormatted}" Width="80" />
                        </DataGrid.Columns>

                        <!-- Row colour coding: red for critical errors -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow"
                                   BasedOn="{StaticResource {x:Type DataGridRow}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BugCheckName}" Value="CRITICAL_PROCESS_DIED">
                                        <Setter Property="Foreground" Value="#E06666" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding BugCheckName}" Value="KERNEL_SECURITY_CHECK_FAILURE">
                                        <Setter Property="Foreground" Value="#E06666" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 4: Software Inventory -->
            <!-- ============================================================ -->
            <TabItem Header="Software Inventory">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <ui:Button Content="Load Installed Software"
                                   Appearance="Primary"
                                   Command="{Binding ViewModel.LoadSoftwareCommand}"
                                   MinWidth="180" Margin="0,0,12,0" />
                        <ui:Button Content="Export CSV"
                                   Command="{Binding ViewModel.ExportSoftwareCsvCommand}"
                                   MinWidth="100" Margin="0,0,12,0" />
                        <CheckBox Content="Include system components"
                                  IsChecked="{Binding ViewModel.IncludeSystemComponents}"
                                  VerticalAlignment="Center" />
                    </StackPanel>

                    <!-- Search filter -->
                    <ui:TextBox Grid.Row="1"
                                PlaceholderText="Search by name or publisher..."
                                Text="{Binding ViewModel.SoftwareSearchFilter, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,12" />

                    <!-- Software list -->
                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding ViewModel.FilteredSoftware}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding DisplayName}" Width="*" />
                            <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" Width="180" />
                            <DataGridTextColumn Header="Version" Binding="{Binding DisplayVersion}" Width="120" />
                            <DataGridTextColumn Header="Installed" Binding="{Binding InstallDateFormatted}" Width="100" />
                            <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 5: AV Health Scanner -->
            <!-- ============================================================ -->
            <TabItem Header="AV Health">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <ui:Button Content="Scan for AV Products"
                                   Appearance="Primary"
                                   Command="{Binding ViewModel.ScanAntivirusCommand}"
                                   MinWidth="180" Margin="0,0,16,0" />
                        <TextBlock Text="Checks WMI, registry, services, and file system for installed and remnant AV"
                                   VerticalAlignment="Center" Opacity="0.5" FontSize="12" />
                    </StackPanel>

                    <!-- AV products grid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding ViewModel.AntivirusProducts}"
                              SelectedItem="{Binding ViewModel.SelectedAvProduct}"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="90" />
                            <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*" />
                            <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" Width="140" />
                            <DataGridTextColumn Header="Enabled" Binding="{Binding EnabledDisplay}" Width="70" />
                            <DataGridTextColumn Header="Up to Date" Binding="{Binding UpToDateDisplay}" Width="80" />
                            <DataGridTextColumn Header="Remnants" Binding="{Binding RemnantCount}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>

                        <!-- Row colour coding by status -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow"
                                   BasedOn="{StaticResource {x:Type DataGridRow}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StatusDisplay}" Value="Active">
                                        <Setter Property="Foreground" Value="#4CAF50" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusDisplay}" Value="Installed">
                                        <Setter Property="Foreground" Value="#2196F3" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusDisplay}" Value="Remnant">
                                        <Setter Property="Foreground" Value="#FF9800" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusDisplay}" Value="Conflict">
                                        <Setter Property="Foreground" Value="#F44336" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>

                    <!-- Remnant details panel -->
                    <Expander Grid.Row="2"
                              Header="Remnant Details"
                              Margin="0,12,0,0"
                              Visibility="{Binding ViewModel.SelectedAvProduct.HasRemnants, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}">
                        <StackPanel Margin="16,8">
                            <TextBlock Text="{Binding ViewModel.SelectedAvProduct.RemnantSummary}"
                                       FontWeight="SemiBold" Margin="0,0,0,8" />

                            <!-- Remnant folders -->
                            <TextBlock Text="Folders:" FontWeight="SemiBold" Margin="0,4,0,2" />
                            <ItemsControl ItemsSource="{Binding ViewModel.SelectedAvProduct.RemnantPaths}"
                                          Margin="16,0,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="12" Opacity="0.8" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Remnant services -->
                            <TextBlock Text="Services:" FontWeight="SemiBold" Margin="0,8,0,2" />
                            <ItemsControl ItemsSource="{Binding ViewModel.SelectedAvProduct.RemnantServices}"
                                          Margin="16,0,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="12" Opacity="0.8" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Remnant registry keys -->
                            <TextBlock Text="Registry keys:" FontWeight="SemiBold" Margin="0,8,0,2" />
                            <ItemsControl ItemsSource="{Binding ViewModel.SelectedAvProduct.RemnantRegistryKeys}"
                                          Margin="16,0,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="12"
                                                   TextWrapping="Wrap" Opacity="0.8" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Removal tool link -->
                            <TextBlock Margin="0,12,0,0"
                                       Visibility="{Binding ViewModel.SelectedAvProduct.RemovalToolUrl, Converter={StaticResource StringToVis}}">
                                <Run Text="Vendor removal tool: " FontWeight="SemiBold" />
                                <Run Text="{Binding ViewModel.SelectedAvProduct.RemovalToolUrl, Mode=OneWay}"
                                     Foreground="#2196F3" />
                            </TextBlock>
                        </StackPanel>
                    </Expander>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 6: Process Explorer -->
            <!-- ============================================================ -->
            <TabItem Header="Processes">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <ui:Button Content="Refresh Processes"
                                   Appearance="Primary"
                                   Command="{Binding ViewModel.LoadProcessesCommand}"
                                   MinWidth="160" Margin="0,0,12,0" />
                        <ui:Button Content="Kill Process"
                                   Appearance="Danger"
                                   Command="{Binding ViewModel.KillSelectedProcessCommand}"
                                   MinWidth="110" Margin="0,0,12,0" />
                        <ui:Button Content="Open File Location"
                                   Command="{Binding ViewModel.OpenProcessLocationCommand}"
                                   MinWidth="140" Margin="0,0,16,0" />
                        <TextBlock Text="CPU usage sampled over ~500ms interval"
                                   VerticalAlignment="Center" Opacity="0.5" FontSize="12" />
                    </StackPanel>

                    <!-- Search filter -->
                    <ui:TextBox Grid.Row="1"
                                PlaceholderText="Search by name, description, or PID..."
                                Text="{Binding ViewModel.ProcessSearchFilter, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,12" />

                    <!-- Process list -->
                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding ViewModel.FilteredProcesses}"
                              SelectedItem="{Binding ViewModel.SelectedProcess}"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="PID" Binding="{Binding Pid}" Width="65">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="Consolas" />
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="180" />
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" />
                            <DataGridTextColumn Header="CPU %" Binding="{Binding CpuFormatted}" Width="65">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                        <Setter Property="FontFamily" Value="Consolas" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Memory" Binding="{Binding WorkingSetFormatted}" Width="90">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Private" Binding="{Binding PrivateBytesFormatted}" Width="90">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Threads" Binding="{Binding ThreadCount}" Width="65">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Handles" Binding="{Binding HandleCount}" Width="65">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Started" Binding="{Binding StartTimeFormatted}" Width="120" />
                        </DataGrid.Columns>

                        <!-- Row colour coding by resource usage -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow"
                                   BasedOn="{StaticResource {x:Type DataGridRow}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CpuLevel}" Value="High">
                                        <Setter Property="Foreground" Value="#F44336" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CpuLevel}" Value="Medium">
                                        <Setter Property="Foreground" Value="#FF9800" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding MemoryLevel}" Value="High">
                                        <Setter Property="Background" Value="#22F44336" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsSystem}" Value="True">
                                        <Setter Property="Opacity" Value="0.55" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 7: Memory Explorer -->
            <!-- ============================================================ -->
            <TabItem Header="Memory">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <ui:Button Content="Refresh Memory"
                                   Appearance="Primary"
                                   Command="{Binding ViewModel.LoadMemoryCommand}"
                                   MinWidth="160" Margin="0,0,16,0" />
                        <TextBlock Text="Physical RAM, page file usage, and top consumers by working set"
                                   VerticalAlignment="Center" Opacity="0.5" FontSize="12" />
                    </StackPanel>

                    <!-- Memory overview cards -->
                    <Grid Grid.Row="1" Margin="0,0,0,16"
                          Visibility="{Binding ViewModel.CurrentMemoryInfo, Converter={StaticResource NullToVis}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Physical RAM card -->
                        <ui:Card Grid.Column="0" Padding="16" Margin="0,0,8,0">
                            <StackPanel>
                                <TextBlock Text="Physical RAM" FontWeight="SemiBold"
                                           Opacity="0.7" Margin="0,0,0,8" />
                                <ProgressBar Value="{Binding ViewModel.CurrentMemoryInfo.UsedPhysicalPercent}"
                                             Maximum="100" Height="8" Margin="0,0,0,8" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Used:" Opacity="0.6" Margin="0,0,8,2" />
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ViewModel.CurrentMemoryInfo.UsedFormatted}"
                                               FontWeight="SemiBold" HorizontalAlignment="Right" />
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Available:" Opacity="0.6" Margin="0,0,8,2" />
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ViewModel.CurrentMemoryInfo.AvailableFormatted}"
                                               HorizontalAlignment="Right" />
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Total:" Opacity="0.6" Margin="0,0,8,0" />
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ViewModel.CurrentMemoryInfo.TotalFormatted}"
                                               HorizontalAlignment="Right" />
                                </Grid>
                            </StackPanel>
                        </ui:Card>

                        <!-- Page File card -->
                        <ui:Card Grid.Column="1" Padding="16" Margin="4,0,4,0">
                            <StackPanel>
                                <TextBlock Text="Page File" FontWeight="SemiBold"
                                           Opacity="0.7" Margin="0,0,0,8" />
                                <ProgressBar Value="{Binding ViewModel.CurrentMemoryInfo.UsedPageFilePercent}"
                                             Maximum="100" Height="8" Margin="0,0,0,8" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Used:" Opacity="0.6" Margin="0,0,8,2" />
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ViewModel.CurrentMemoryInfo.PageFileUsedFormatted}"
                                               FontWeight="SemiBold" HorizontalAlignment="Right" />
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Total:" Opacity="0.6" Margin="0,0,8,0" />
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ViewModel.CurrentMemoryInfo.PageFileTotalFormatted}"
                                               HorizontalAlignment="Right" />
                                </Grid>
                            </StackPanel>
                        </ui:Card>

                        <!-- Health status card -->
                        <ui:Card Grid.Column="2" Padding="16" Margin="8,0,0,0">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Health" FontWeight="SemiBold"
                                           Opacity="0.7" Margin="0,0,0,8"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="{Binding ViewModel.CurrentMemoryInfo.MemoryLoadPercent, StringFormat={}{0}%}"
                                           FontSize="32" FontWeight="Bold"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="{Binding ViewModel.CurrentMemoryInfo.HealthLevel}"
                                           FontSize="14" FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           Margin="0,4,0,0" />
                            </StackPanel>
                        </ui:Card>
                    </Grid>

                    <!-- Top memory consumers grid -->
                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding ViewModel.MemoryConsumers}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="PID" Binding="{Binding Pid}" Width="65">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="Consolas" />
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Process" Binding="{Binding Name}" Width="*" />
                            <DataGridTextColumn Header="Working Set" Binding="{Binding WorkingSetFormatted}" Width="110">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Private Bytes" Binding="{Binding PrivateBytesFormatted}" Width="110">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="% RAM" Binding="{Binding PercentFormatted}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                        <Setter Property="FontFamily" Value="Consolas" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow"
                                   BasedOn="{StaticResource {x:Type DataGridRow}}" />
                        </DataGrid.RowStyle>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 8: Disk Analyser -->
            <!-- ============================================================ -->
            <TabItem Header="Disk Analyser">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Path input and controls -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ui:TextBox Grid.Column="0"
                                    PlaceholderText="Folder path to analyse..."
                                    Text="{Binding ViewModel.DiskAnalysePath, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,8,0" />
                        <ui:Button Grid.Column="1"
                                   Content="Browse"
                                   Command="{Binding ViewModel.BrowseDiskFolderCommand}"
                                   Margin="0,0,8,0" />
                        <ui:Button Grid.Column="2"
                                   Content="Analyse"
                                   Appearance="Primary"
                                   Command="{Binding ViewModel.AnalyseDiskCommand}"
                                   Margin="0,0,8,0" />
                        <ui:Button Grid.Column="3"
                                   Content="Cancel"
                                   Command="{Binding ViewModel.CancelDiskAnalysisCommand}"
                                   Visibility="{Binding ViewModel.IsAnalysingDisk, Converter={StaticResource BoolToVis}}" />
                    </Grid>

                    <!-- Summary card -->
                    <ui:Card Grid.Row="1" Padding="12" Margin="0,0,0,12"
                             Visibility="{Binding ViewModel.CurrentFolderInfo, Converter={StaticResource NullToVis}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total: " FontWeight="SemiBold" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding ViewModel.CurrentFolderInfo.SizeFormatted}"
                                       FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Margin="0,0,16,0" />
                            <TextBlock Text="Files: " Opacity="0.6" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding ViewModel.CurrentFolderInfo.FileCount, StringFormat={}{0:N0}}"
                                       VerticalAlignment="Center" Margin="0,0,16,0" />
                            <TextBlock Text="Folders: " Opacity="0.6" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding ViewModel.CurrentFolderInfo.FolderCount, StringFormat={}{0:N0}}"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </ui:Card>

                    <!-- Split view: folder breakdown + largest files -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Folder breakdown -->
                        <DockPanel Grid.Row="0">
                            <TextBlock DockPanel.Dock="Top" Text="Folder Breakdown"
                                       FontWeight="SemiBold" Margin="0,0,0,6" />
                            <DataGrid ItemsSource="{Binding ViewModel.FolderChildren}"
                                      IsReadOnly="True"
                                      AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Folder" Binding="{Binding Name}" Width="*" />
                                    <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Files" Binding="{Binding FileCount, StringFormat={}{0:N0}}" Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Folders" Binding="{Binding FolderCount, StringFormat={}{0:N0}}" Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="%" Binding="{Binding Percentage, StringFormat={}{0:F1}%}" Width="70">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                                <Setter Property="FontFamily" Value="Consolas" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DockPanel>

                        <!-- Largest files -->
                        <DockPanel Grid.Row="2">
                            <TextBlock DockPanel.Dock="Top" Text="Largest Files (Top 50)"
                                       FontWeight="SemiBold" Margin="0,0,0,6" />
                            <DataGrid ItemsSource="{Binding ViewModel.LargestFiles}"
                                      IsReadOnly="True"
                                      AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                                    <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Type" Binding="{Binding Extension}" Width="70" />
                                    <DataGridTextColumn Header="Modified" Binding="{Binding LastModifiedFormatted}" Width="130" />
                                    <DataGridTextColumn Header="Path" Binding="{Binding FullPath}" Width="300">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontFamily" Value="Consolas" />
                                                <Setter Property="FontSize" Value="11" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DockPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 9: Duplicate Finder -->
            <!-- ============================================================ -->
            <TabItem Header="Duplicate Finder">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Path and controls -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ui:TextBox Grid.Column="0"
                                    PlaceholderText="Folder path to search..."
                                    Text="{Binding ViewModel.DuplicateSearchPath, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,8,0" />
                        <ui:Button Grid.Column="1"
                                   Content="Browse"
                                   Command="{Binding ViewModel.BrowseDuplicateFolderCommand}"
                                   Margin="0,0,8,0" />
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                            <TextBlock Text="Min size (KB):" VerticalAlignment="Center" Margin="0,0,4,0" Opacity="0.7" />
                            <ui:TextBox Text="{Binding ViewModel.DuplicateMinSizeKb, UpdateSourceTrigger=PropertyChanged}"
                                        MinWidth="60" />
                        </StackPanel>
                        <ui:Button Grid.Column="3"
                                   Content="Search"
                                   Appearance="Primary"
                                   Command="{Binding ViewModel.SearchDuplicatesCommand}"
                                   Margin="0,0,8,0" />
                        <ui:Button Grid.Column="4"
                                   Content="Stop"
                                   Command="{Binding ViewModel.StopDuplicateSearchCommand}"
                                   Visibility="{Binding ViewModel.IsSearchingDuplicates, Converter={StaticResource BoolToVis}}"
                                   Margin="0,0,8,0" />
                        <ui:Button Grid.Column="5"
                                   Content="Delete Selected"
                                   Appearance="Danger"
                                   Command="{Binding ViewModel.DeleteSelectedDuplicatesCommand}" />
                    </Grid>

                    <!-- Summary bar -->
                    <ui:Card Grid.Row="1" Padding="10" Margin="0,0,0,12"
                             Visibility="{Binding ViewModel.DuplicateTotalWasted, Converter={StaticResource StringToVis}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Duplicate groups: " Opacity="0.6" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding ViewModel.DuplicateGroupCount}"
                                       FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,16,0" />
                            <TextBlock Text="Wasted space: " Opacity="0.6" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding ViewModel.DuplicateTotalWasted}"
                                       FontWeight="Bold" FontSize="14" Foreground="#FF9800" VerticalAlignment="Center" />
                        </StackPanel>
                    </ui:Card>

                    <!-- Duplicate groups list -->
                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding ViewModel.DuplicateGroups}"
                              SelectedItem="{Binding ViewModel.SelectedDuplicateGroup}"
                              SelectionMode="Single"
                              IsReadOnly="True"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Hash (SHA-256)" Binding="{Binding Hash}" Width="180">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="Consolas" />
                                        <Setter Property="FontSize" Value="11" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="File Size" Binding="{Binding FileSizeFormatted}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Copies" Binding="{Binding Count}" Width="65">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Wasted" Binding="{Binding WastedFormatted}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                        <Setter Property="Foreground" Value="#FF9800" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Files in selected group -->
                    <TextBlock Grid.Row="3" Text="Files in Selected Group"
                               FontWeight="SemiBold" Margin="0,12,0,6"
                               Visibility="{Binding ViewModel.SelectedDuplicateGroup, Converter={StaticResource NullToVis}}" />

                    <DataGrid Grid.Row="4"
                              ItemsSource="{Binding ViewModel.SelectedDuplicateGroup.Files}"
                              Visibility="{Binding ViewModel.SelectedDuplicateGroup, Converter={StaticResource NullToVis}}"
                              AutoGenerateColumns="False"
                              MaxHeight="200">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Width="55" />
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" IsReadOnly="True" />
                            <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="90" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Modified" Binding="{Binding LastModifiedFormatted}" Width="130" IsReadOnly="True" />
                            <DataGridTextColumn Header="Directory" Binding="{Binding Directory}" Width="300" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="Consolas" />
                                        <Setter Property="FontSize" Value="11" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 10: File Shredder -->
            <!-- ============================================================ -->
            <TabItem Header="File Shredder">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel Margin="16">

                        <TextBlock Text="Securely overwrite and permanently delete files  data cannot be recovered"
                                   Opacity="0.7" Margin="0,0,0,16" />

                        <!-- Shred method selection -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="250" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Shred Method:"
                                       FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,12,0" />
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{x:Static local:ToolsViewModel.ShredMethods}"
                                      SelectedIndex="{Binding ViewModel.ShredMethodIndex}" />
                        </Grid>

                        <!-- File list section -->
                        <ui:Card Padding="16" Margin="0,0,0,16">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock Text="Files to Shred" FontWeight="SemiBold"
                                               VerticalAlignment="Center" Margin="0,0,16,0" />
                                    <ui:Button Content="Add Files"
                                               Command="{Binding ViewModel.AddShredFilesCommand}"
                                               Margin="0,0,8,0" />
                                    <ui:Button Content="Clear All"
                                               Command="{Binding ViewModel.ClearShredFilesCommand}" />
                                </StackPanel>

                                <ListBox ItemsSource="{Binding ViewModel.ShredFiles}"
                                         MinHeight="100" MaxHeight="200">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding}"
                                                           FontFamily="Consolas" FontSize="11"
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis" />
                                                <ui:Button Grid.Column="1" Content="Remove"
                                                           Command="{Binding DataContext.ViewModel.RemoveShredFileCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                           CommandParameter="{Binding}"
                                                           Margin="8,0,0,0" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </DockPanel>
                        </ui:Card>

                        <!-- Shred action + progress -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <ui:Button Content="SHRED FILES"
                                       Appearance="Danger"
                                       Command="{Binding ViewModel.ShredFilesExecuteCommand}"
                                       MinWidth="160" FontWeight="Bold"
                                       Margin="0,0,12,0" />
                            <ui:Button Content="Stop"
                                       Command="{Binding ViewModel.StopShredCommand}"
                                       Visibility="{Binding ViewModel.IsShredding, Converter={StaticResource BoolToVis}}" />
                        </StackPanel>

                        <ProgressBar Value="{Binding ViewModel.ShredProgress}"
                                     Maximum="100" Height="8" Margin="0,0,0,24"
                                     Visibility="{Binding ViewModel.IsShredding, Converter={StaticResource BoolToVis}}" />

                        <!-- Free space wipe section -->
                        <Separator Margin="0,0,0,16" />

                        <TextBlock Text="Free Space Wipe" FontWeight="Bold" FontSize="16" Margin="0,0,0,8" />
                        <TextBlock Text="Overwrite all free space on a drive to prevent data recovery from previously deleted files"
                                   Opacity="0.7" Margin="0,0,0,16" TextWrapping="Wrap" />

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Drive:"
                                       FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,8,0" />
                            <ui:TextBox Grid.Column="1"
                                        Text="{Binding ViewModel.WipeDriveLetter, UpdateSourceTrigger=PropertyChanged}"
                                        Margin="0,0,12,0" />
                            <ui:Button Grid.Column="2"
                                       Content="WIPE FREE SPACE"
                                       Appearance="Danger"
                                       Command="{Binding ViewModel.WipeFreeSpaceCommand}"
                                       FontWeight="Bold" />
                        </Grid>

                        <TextBlock Text="Warning: This operation can take hours on large drives. The drive will temporarily have almost zero free space."
                                   Opacity="0.5" FontSize="11" FontStyle="Italic" Margin="0,4,0,0" TextWrapping="Wrap" />

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>

        <!-- Status bar -->
        <TextBlock Grid.Row="1"
                   Text="{Binding ViewModel.StatusText}"
                   Opacity="0.6"
                   FontSize="12"
                   Margin="0,8,0,0" />
    </Grid>
</Page>
