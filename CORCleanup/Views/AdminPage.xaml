<Page x:Class="CORCleanup.Views.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Admin"
      Background="{DynamicResource ApplicationBackgroundBrush}">

    <DockPanel Margin="12,0,12,8">
        <!-- Section Header -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,8,0,6">
            <Border Width="4" Height="18" CornerRadius="2"
                    Background="{StaticResource CorSectionAdminBrush}" Margin="0,0,8,0" VerticalAlignment="Center" />
            <TextBlock Text="Admin" FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}" VerticalAlignment="Center" />
        </StackPanel>
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- System Summary Report Export -->
        <ui:Card Grid.Row="0" Padding="12" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ui:Button Grid.Column="0"
                           Content="Export System Report"
                           Appearance="Primary"
                           Command="{Binding ViewModel.ExportSystemReportCommand}"
                           MinWidth="180"
                           Margin="0,0,12,0"
                           ToolTip="Generate a COR Intelligence branded HTML report of the complete system status" />

                <ProgressBar Grid.Column="1"
                             IsIndeterminate="True"
                             Width="120"
                             Height="4"
                             VerticalAlignment="Center"
                             Margin="0,0,12,0"
                             Visibility="{Binding ViewModel.IsExportingReport, Converter={StaticResource BoolToVis}}" />

                <TextBlock Grid.Column="2"
                           Text="{Binding ViewModel.ExportStatusText}"
                           VerticalAlignment="Center"
                           Opacity="0.7"
                           FontSize="12"
                           TextTrimming="CharacterEllipsis" />
            </Grid>
        </ui:Card>

        <TabControl Grid.Row="1"
                    SelectedIndex="{Binding ViewModel.SelectedTabIndex}">

            <!-- ============================================================ -->
            <!-- TAB 1: Startup Items -->
            <!-- ============================================================ -->
            <TabItem Header="Startup Items">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <ui:Button Content="Load Startup Items"
                                   Command="{Binding ViewModel.LoadStartupItemsCommand}"
                                   Appearance="Primary"
                                   Margin="0,0,12,0" />
                        <CheckBox Content="Hide Microsoft entries"
                                  IsChecked="{Binding ViewModel.HideMicrosoftEntries}"
                                  VerticalAlignment="Center" />
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding ViewModel.FilteredStartupEntries}"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Enabled" Binding="{Binding IsEnabled}" Width="65" />
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200" />
                            <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" Width="150" />
                            <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="100" />
                            <DataGridTextColumn Header="Impact" Binding="{Binding Impact}" Width="70" />
                            <DataGridTextColumn Header="File Path" Binding="{Binding FilePath}" Width="*" />
                        </DataGrid.Columns>

                        <DataGrid.InputBindings>
                            <MouseBinding Gesture="LeftDoubleClick"
                                          Command="{Binding DataContext.ViewModel.ToggleStartupItemCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                          CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                        </DataGrid.InputBindings>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 2: Services -->
            <!-- ============================================================ -->
            <TabItem Header="Services">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ui:Button Grid.Column="0"
                                   Content="Load Services"
                                   Command="{Binding ViewModel.LoadServicesCommand}"
                                   Appearance="Primary"
                                   Margin="0,0,12,0" />

                        <ui:TextBox Grid.Column="1"
                                    PlaceholderText="Filter services..."
                                    Text="{Binding ViewModel.ServiceFilter, UpdateSourceTrigger=PropertyChanged}" />

                        <ui:Button Grid.Column="2"
                                   Content="Start"
                                   Appearance="Success"
                                   Command="{Binding ViewModel.StartServiceCommand}"
                                   MinWidth="70"
                                   Margin="12,0,4,0" />
                        <ui:Button Grid.Column="3"
                                   Content="Stop"
                                   Appearance="Danger"
                                   Command="{Binding ViewModel.StopServiceCommand}"
                                   MinWidth="70"
                                   Margin="0,0,4,0" />
                        <ui:Button Grid.Column="4"
                                   Content="Restart"
                                   Appearance="Info"
                                   Command="{Binding ViewModel.RestartServiceCommand}"
                                   MinWidth="70" />
                    </Grid>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding ViewModel.FilteredServices}"
                              SelectedItem="{Binding ViewModel.SelectedService}"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="220" />
                            <DataGridTextColumn Header="Service Name" Binding="{Binding ServiceName}" Width="180" />
                            <DataGridTextColumn Header="Status" Binding="{Binding StatusText}" Width="80" />
                            <DataGridTextColumn Header="Start Type" Binding="{Binding StartType}" Width="90" />
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="110" />
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 3: Event Log -->
            <!-- ============================================================ -->
            <TabItem Header="Event Log">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <ui:Button Content="Load Events"
                                   Command="{Binding ViewModel.LoadEventLogCommand}"
                                   Appearance="Primary"
                                   Margin="0,0,12,0" />
                        <TextBlock Text="Last" VerticalAlignment="Center" Margin="0,0,6,0" />
                        <ui:NumberBox Value="{Binding ViewModel.EventLogDays}"
                                      Minimum="1" Maximum="90"
                                      SpinButtonPlacementMode="Compact"
                                      Width="100"
                                      Margin="0,0,6,0" />
                        <TextBlock Text="days" VerticalAlignment="Center" />
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding ViewModel.EventLogEntries}"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding TimeFormatted}" Width="150" />
                            <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="80" />
                            <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="160" />
                            <DataGridTextColumn Header="Event ID" Binding="{Binding EventId}" Width="70" />
                            <DataGridTextColumn Header="Log" Binding="{Binding LogName}" Width="80" />
                            <DataGridTextColumn Header="Explanation" Binding="{Binding HumanReadableExplanation}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 4: System Repair -->
            <!-- ============================================================ -->
            <TabItem Header="System Repair">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel Margin="16">
                        <TextBlock Text="Run Windows repair tools (requires administrator privileges)"
                                   Opacity="0.7" Margin="0,0,0,16" />

                        <!-- Repair buttons — each highlights only while its operation is running -->
                        <WrapPanel Margin="0,0,0,16">
                            <ui:Button Content="SFC Scan"
                                       Appearance="{Binding ViewModel.IsSfcRunning, Converter={StaticResource BoolToAppearance}}"
                                       Command="{Binding ViewModel.RunSfcScanCommand}"
                                       MinWidth="140"
                                       Margin="0,0,8,8"
                                       ToolTip="System File Checker — scans and repairs protected system files" />
                            <ui:Button Content="DISM Repair"
                                       Appearance="{Binding ViewModel.IsDismRunning, Converter={StaticResource BoolToAppearance}}"
                                       Command="{Binding ViewModel.RunDismRepairCommand}"
                                       MinWidth="140"
                                       Margin="0,0,8,8"
                                       ToolTip="DISM Restore Health — repairs the Windows component store" />
                            <ui:Button Content="Network Reset"
                                       Appearance="{Binding ViewModel.IsNetworkResetRunning, Converter={StaticResource BoolToAppearance}}"
                                       Command="{Binding ViewModel.RunNetworkResetCommand}"
                                       MinWidth="140"
                                       Margin="0,0,8,8"
                                       ToolTip="Resets Winsock, TCP/IP, DNS cache, and TCP settings" />
                            <ui:Button Content="Flush DNS"
                                       Appearance="{Binding ViewModel.IsDnsFlushRunning, Converter={StaticResource BoolToAppearance}}"
                                       Command="{Binding ViewModel.RunDnsFlushCommand}"
                                       MinWidth="110"
                                       Margin="0,0,8,8"
                                       ToolTip="Flushes the DNS resolver cache" />
                            <ui:Button Content="WU Reset"
                                       Appearance="{Binding ViewModel.IsWuResetRunning, Converter={StaticResource BoolToAppearance}}"
                                       Command="{Binding ViewModel.RunWindowsUpdateResetCommand}"
                                       MinWidth="110"
                                       Margin="0,0,8,8"
                                       ToolTip="Stops and restarts Windows Update services (BITS, wuauserv, cryptSvc, msiserver)" />
                        </WrapPanel>

                        <!-- Progress indicator -->
                        <ProgressBar IsIndeterminate="True"
                                     Height="4"
                                     Margin="0,0,0,12"
                                     Visibility="{Binding ViewModel.IsRepairing, Converter={StaticResource BoolToVis}}" />

                        <!-- Live output -->
                        <ui:Card Padding="0" Margin="0,0,0,16">
                            <TextBox Text="{Binding ViewModel.RepairOutput, Mode=OneWay}"
                                     IsReadOnly="True"
                                     FontFamily="Consolas"
                                     FontSize="11"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     MaxHeight="300"
                                     Padding="12"
                                     BorderThickness="0" />
                        </ui:Card>

                        <!-- History -->
                        <TextBlock Text="Repair History"
                                   FontWeight="SemiBold" Margin="0,0,0,8" />
                        <DataGrid ItemsSource="{Binding ViewModel.RepairResults}"
                                  MaxHeight="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Operation" Binding="{Binding OperationName}" Width="180" />
                                <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="160" />
                                <DataGridTextColumn Header="Duration" Binding="{Binding DurationFormatted}" Width="80" />
                                <DataGridTextColumn Header="Command" Binding="{Binding Command}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontFamily" Value="Consolas" />
                                            <Setter Property="FontSize" Value="11" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 5: Printer Management -->
            <!-- ============================================================ -->
            <TabItem Header="Printers">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <ui:Button Content="Load Printers"
                                   Appearance="Primary"
                                   Command="{Binding ViewModel.LoadPrintersCommand}"
                                   MinWidth="130"
                                   Margin="0,0,12,0" />
                        <ui:Button Content="Clear Spooler"
                                   Appearance="Info"
                                   Command="{Binding ViewModel.ClearSpoolerCommand}"
                                   MinWidth="110"
                                   Margin="0,0,12,0"
                                   ToolTip="Stops the print spooler, clears the queue, then restarts" />
                        <ui:Button Content="Set Default"
                                   Command="{Binding ViewModel.SetDefaultPrinterCommand}"
                                   MinWidth="100"
                                   Margin="0,0,8,0" />
                        <ui:Button Content="Test Page"
                                   Command="{Binding ViewModel.PrintTestPageCommand}"
                                   MinWidth="90"
                                   Margin="0,0,8,0" />
                        <ui:Button Content="Remove"
                                   Appearance="Danger"
                                   Command="{Binding ViewModel.RemovePrinterCommand}"
                                   MinWidth="80" />
                    </StackPanel>

                    <!-- Printer list -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding ViewModel.Printers}"
                              SelectedItem="{Binding ViewModel.SelectedPrinter}"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                            <DataGridTextColumn Header="Driver" Binding="{Binding DriverName}" Width="200" />
                            <DataGridTextColumn Header="Port" Binding="{Binding PortName}" Width="120" />
                            <DataGridTextColumn Header="Type" Binding="{Binding TypeDisplay}" Width="80" />
                            <DataGridTextColumn Header="Default" Binding="{Binding DefaultDisplay}" Width="65" />
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90" />
                            <DataGridTextColumn Header="Jobs" Binding="{Binding JobCountDisplay}" Width="55" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 6: Hosts File Editor -->
            <!-- ============================================================ -->
            <TabItem Header="Hosts File">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <ui:Button Content="Load Hosts File"
                                   Appearance="Primary"
                                   Command="{Binding ViewModel.LoadHostsFileCommand}"
                                   MinWidth="140"
                                   Margin="0,0,12,0" />
                        <ui:Button Content="Toggle"
                                   Command="{Binding ViewModel.ToggleHostEntryCommand}"
                                   MinWidth="80"
                                   Margin="0,0,8,0"
                                   ToolTip="Enable or disable the selected host entry" />
                        <ui:Button Content="Remove"
                                   Appearance="Danger"
                                   Command="{Binding ViewModel.RemoveHostEntryCommand}"
                                   MinWidth="80"
                                   Margin="0,0,16,0" />
                        <TextBlock Text="Edits C:\Windows\System32\drivers\etc\hosts (requires administrator)"
                                   VerticalAlignment="Center" Opacity="0.5" FontSize="11" />
                    </StackPanel>

                    <!-- Add new entry -->
                    <ui:Card Grid.Row="1" Padding="12" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ui:TextBox Grid.Column="0"
                                        PlaceholderText="IP Address"
                                        Text="{Binding ViewModel.NewHostIp, UpdateSourceTrigger=PropertyChanged}"
                                        FontFamily="Consolas"
                                        Margin="0,0,8,0" />
                            <ui:TextBox Grid.Column="1"
                                        PlaceholderText="Hostname (e.g. example.com)"
                                        Text="{Binding ViewModel.NewHostHostname, UpdateSourceTrigger=PropertyChanged}"
                                        Margin="0,0,8,0" />
                            <ui:TextBox Grid.Column="2"
                                        PlaceholderText="Comment (optional)"
                                        Text="{Binding ViewModel.NewHostComment, UpdateSourceTrigger=PropertyChanged}"
                                        Margin="0,0,8,0" />
                            <ui:Button Grid.Column="3"
                                       Content="Add Entry"
                                       Appearance="Primary"
                                       Command="{Binding ViewModel.AddHostEntryCommand}"
                                       MinWidth="100" />
                        </Grid>
                    </ui:Card>

                    <!-- Hosts list -->
                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding ViewModel.HostsEntries}"
                              SelectedItem="{Binding ViewModel.SelectedHostEntry}"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="70" />
                            <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="160">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="Consolas" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Hostname" Binding="{Binding Hostname}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="Consolas" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Comment" Binding="{Binding Comment}" Width="200" />
                            <DataGridTextColumn Header="Line" Binding="{Binding LineNumber}" Width="50" />
                        </DataGrid.Columns>

                        <!-- Dim disabled entries -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow"
                                   BasedOn="{StaticResource {x:Type DataGridRow}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StatusDisplay}" Value="Disabled">
                                        <Setter Property="Opacity" Value="0.5" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 7: Firewall Rules -->
            <!-- ============================================================ -->
            <TabItem Header="Firewall">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ui:Button Grid.Column="0"
                                   Content="Load Firewall Rules"
                                   Command="{Binding ViewModel.LoadFirewallRulesCommand}"
                                   Appearance="Primary"
                                   MinWidth="160"
                                   Margin="0,0,12,0" />

                        <ui:TextBox Grid.Column="1"
                                    PlaceholderText="Filter by name, program, or port..."
                                    Text="{Binding ViewModel.FirewallFilter, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock Grid.Column="2"
                                   Text="Direction:"
                                   VerticalAlignment="Center"
                                   Margin="12,0,6,0" />

                        <ComboBox Grid.Column="3"
                                  ItemsSource="{Binding ViewModel.FirewallDirectionOptions}"
                                  SelectedItem="{Binding ViewModel.FirewallDirectionFilter}"
                                  Width="90" />
                    </Grid>

                    <!-- Rules grid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding ViewModel.FilteredFirewallRules}"
                              SelectedItem="{Binding ViewModel.SelectedFirewallRule}"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="70" />
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="220" />
                            <DataGridTextColumn Header="Direction" Binding="{Binding Direction}" Width="70" />
                            <DataGridTextColumn Header="Action" Binding="{Binding ActionDisplay}" Width="65" />
                            <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol}" Width="70" />
                            <DataGridTextColumn Header="Local Port" Binding="{Binding LocalPort}" Width="90" />
                            <DataGridTextColumn Header="Program" Binding="{Binding Program}" Width="200" />
                            <DataGridTextColumn Header="Profile" Binding="{Binding Profile}" Width="*" />
                        </DataGrid.Columns>

                        <!-- Dim disabled rules -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow"
                                   BasedOn="{StaticResource {x:Type DataGridRow}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StatusDisplay}" Value="Disabled">
                                        <Setter Property="Opacity" Value="0.5" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>

                    <!-- Bottom bar -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
                        <ui:Button Content="Toggle Selected Rule"
                                   Command="{Binding ViewModel.ToggleFirewallRuleCommand}"
                                   MinWidth="160"
                                   Margin="0,0,12,0"
                                   ToolTip="Enable or disable the selected firewall rule" />
                        <TextBlock VerticalAlignment="Center" Opacity="0.5" FontSize="11">
                            <Run Text="Showing " />
                            <Run Text="{Binding ViewModel.FilteredFirewallRules.Count, Mode=OneWay}" />
                            <Run Text=" of " />
                            <Run Text="{Binding ViewModel.FirewallRules.Count, Mode=OneWay}" />
                            <Run Text=" rule(s)" />
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 8: Environment Variables -->
            <!-- ============================================================ -->
            <TabItem Header="Env Vars">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ui:Button Grid.Column="0"
                                   Content="Load Variables"
                                   Command="{Binding ViewModel.LoadEnvVariablesCommand}"
                                   Appearance="Primary"
                                   MinWidth="130"
                                   Margin="0,0,12,0" />

                        <ui:TextBox Grid.Column="1"
                                    PlaceholderText="Filter by name or value..."
                                    Text="{Binding ViewModel.EnvVarFilter, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock Grid.Column="2"
                                   Text="Scope:"
                                   VerticalAlignment="Center"
                                   Margin="12,0,6,0" />

                        <ComboBox Grid.Column="3"
                                  ItemsSource="{Binding ViewModel.EnvVarScopes}"
                                  SelectedItem="{Binding ViewModel.EnvVarScopeFilter}"
                                  Width="100"
                                  Margin="0,0,8,0" />

                        <ui:Button Grid.Column="4"
                                   Content="Delete"
                                   Appearance="Danger"
                                   Command="{Binding ViewModel.DeleteEnvVariableCommand}"
                                   MinWidth="70" />
                    </Grid>

                    <!-- Add new variable -->
                    <ui:Card Grid.Row="1" Padding="12" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ui:TextBox Grid.Column="0"
                                        PlaceholderText="Variable name"
                                        Text="{Binding ViewModel.NewEnvVarName, UpdateSourceTrigger=PropertyChanged}"
                                        FontFamily="Consolas"
                                        Margin="0,0,8,0" />
                            <ui:TextBox Grid.Column="1"
                                        PlaceholderText="Value"
                                        Text="{Binding ViewModel.NewEnvVarValue, UpdateSourceTrigger=PropertyChanged}"
                                        Margin="0,0,8,0" />
                            <ComboBox Grid.Column="2"
                                      ItemsSource="{Binding ViewModel.EnvVarEditScopes}"
                                      SelectedItem="{Binding ViewModel.NewEnvVarScope}"
                                      Margin="0,0,8,0" />
                            <ui:Button Grid.Column="3"
                                       Content="Add / Set"
                                       Appearance="Primary"
                                       Command="{Binding ViewModel.AddEnvVariableCommand}"
                                       MinWidth="90" />
                        </Grid>
                    </ui:Card>

                    <!-- Variables grid -->
                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding ViewModel.FilteredEnvVariables}"
                              SelectedItem="{Binding ViewModel.SelectedEnvVar}"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="220">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="Consolas" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="Consolas" />
                                        <Setter Property="FontSize" Value="11" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Scope" Binding="{Binding Scope}" Width="80" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- PATH entries section -->
                    <ui:Card Grid.Row="3" Padding="12" Margin="0,12,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="PATH Entries"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0" />
                                <ui:Button Content="Load PATH"
                                           Command="{Binding ViewModel.LoadPathEntriesCommand}"
                                           MinWidth="100" />
                            </StackPanel>

                            <ListBox Grid.Row="1"
                                     ItemsSource="{Binding ViewModel.PathEntries}"
                                     MaxHeight="180"
                                     FontFamily="Consolas"
                                     FontSize="11" />
                        </Grid>
                    </ui:Card>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 9: AV Health (moved from Tools) -->
            <!-- ============================================================ -->
            <TabItem Header="AV Health">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Scan button and description -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <ui:Button Content="Scan Antivirus Products"
                                       Appearance="Primary"
                                       Command="{Binding ViewModel.ScanAntivirusCommand}"
                                       MinWidth="200"
                                       Margin="0,0,12,0" />
                            <ProgressBar IsIndeterminate="True"
                                         Width="120"
                                         Height="4"
                                         VerticalAlignment="Center"
                                         Visibility="{Binding ViewModel.IsScanningAv, Converter={StaticResource BoolToVis}}" />
                        </StackPanel>
                        <TextBlock Text="Scans WMI Security Centre, registry uninstall keys, Windows services, and common file system paths to detect active, installed, and remnant antivirus products."
                                   TextWrapping="Wrap"
                                   Opacity="0.6"
                                   FontSize="12" />
                    </StackPanel>

                    <!-- AV Products DataGrid -->
                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding ViewModel.AntivirusProducts}"
                              SelectedItem="{Binding ViewModel.SelectedAvProduct}"
                              SelectionMode="Single"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="90">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*" />
                            <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" Width="140" />
                            <DataGridTextColumn Header="Enabled" Binding="{Binding EnabledDisplay}" Width="70" />
                            <DataGridTextColumn Header="Up to Date" Binding="{Binding UpToDateDisplay}" Width="80" />
                            <DataGridTextColumn Header="Remnants" Binding="{Binding RemnantCount}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>

                        <!-- Row colour by status -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow"
                                   BasedOn="{StaticResource {x:Type DataGridRow}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StatusDisplay}" Value="Active">
                                        <Setter Property="Foreground" Value="#4CAF50" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusDisplay}" Value="Installed">
                                        <Setter Property="Foreground" Value="#2196F3" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusDisplay}" Value="Remnant">
                                        <Setter Property="Foreground" Value="#FF9800" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusDisplay}" Value="Conflict">
                                        <Setter Property="Foreground" Value="#F44336" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>

                    <!-- Remnant Details Expander -->
                    <Expander Grid.Row="3"
                              Header="Remnant Details"
                              Margin="0,12,0,0"
                              Visibility="{Binding ViewModel.SelectedAvProduct.HasRemnants, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}">
                        <StackPanel Margin="8">
                            <!-- Summary -->
                            <TextBlock Text="{Binding ViewModel.SelectedAvProduct.RemnantSummary}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,12"
                                       Opacity="0.8" />

                            <!-- Remnant Paths (Folders) -->
                            <TextBlock Text="Folders"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,4" />
                            <ItemsControl ItemsSource="{Binding ViewModel.SelectedAvProduct.RemnantPaths}"
                                          Margin="0,0,0,12">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   FontFamily="Consolas"
                                                   FontSize="12"
                                                   Margin="0,1" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Remnant Services -->
                            <TextBlock Text="Services"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,4" />
                            <ItemsControl ItemsSource="{Binding ViewModel.SelectedAvProduct.RemnantServices}"
                                          Margin="0,0,0,12">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   FontFamily="Consolas"
                                                   FontSize="12"
                                                   Margin="0,1" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Remnant Registry Keys -->
                            <TextBlock Text="Registry Keys"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,4" />
                            <ItemsControl ItemsSource="{Binding ViewModel.SelectedAvProduct.RemnantRegistryKeys}"
                                          Margin="0,0,0,12">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   FontFamily="Consolas"
                                                   FontSize="12"
                                                   Margin="0,1" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Removal Tool Link -->
                            <TextBlock Margin="0,4,0,0"
                                       Visibility="{Binding ViewModel.SelectedAvProduct.RemovalToolUrl, Converter={StaticResource StringToVis}}">
                                <Hyperlink NavigateUri="{Binding ViewModel.SelectedAvProduct.RemovalToolUrl}"
                                           RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="Official Removal Tool" />
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Expander>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 10: BSOD Viewer (moved from Tools) -->
            <!-- ============================================================ -->
            <TabItem Header="BSOD Viewer">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Load button and description -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <ui:Button Content="Load Crash History"
                                       Appearance="Primary"
                                       Command="{Binding ViewModel.LoadBsodCrashesCommand}"
                                       MinWidth="180"
                                       Margin="0,0,12,0" />
                            <ProgressBar IsIndeterminate="True"
                                         Width="120"
                                         Height="4"
                                         VerticalAlignment="Center"
                                         Visibility="{Binding ViewModel.IsLoadingBsod, Converter={StaticResource BoolToVis}}" />
                        </StackPanel>
                        <TextBlock Text="Parses minidump files from C:\Windows\Minidump to show blue screen crash history without requiring WinDbg or debugging tools."
                                   TextWrapping="Wrap"
                                   Opacity="0.6"
                                   FontSize="12" />
                    </StackPanel>

                    <!-- BSOD Crashes DataGrid -->
                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding ViewModel.BsodCrashes}"
                              SelectionMode="Single"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date/Time" Binding="{Binding CrashTimeFormatted}" Width="160" />
                            <DataGridTextColumn Header="Bug Check Code" Binding="{Binding BugCheckCode}" Width="130">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="Consolas" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Bug Check Name" Binding="{Binding BugCheckName}" Width="*" />
                            <DataGridTextColumn Header="Faulting Module" Binding="{Binding FaultingDisplay}" Width="180" />
                            <DataGridTextColumn Header="Dump File" Binding="{Binding DumpFileName}" Width="140" />
                            <DataGridTextColumn Header="Size" Binding="{Binding DumpSizeFormatted}" Width="80" />
                        </DataGrid.Columns>

                        <!-- Highlight critical crashes in red -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow"
                                   BasedOn="{StaticResource {x:Type DataGridRow}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BugCheckName}" Value="CRITICAL_PROCESS_DIED">
                                        <Setter Property="Foreground" Value="#E06666" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding BugCheckName}" Value="KERNEL_SECURITY_CHECK_FAILURE">
                                        <Setter Property="Foreground" Value="#E06666" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ============================================================ -->
            <!-- TAB 11: Password Generator (moved from Tools) -->
            <!-- ============================================================ -->
            <TabItem Header="Password Gen">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel MaxWidth="500" HorizontalAlignment="Left" Margin="16">

                        <!-- Description -->
                        <TextBlock Text="Generate cryptographically secure passwords using System.Security.Cryptography. Suitable for Wi-Fi keys, account passwords, and service credentials."
                                   TextWrapping="Wrap"
                                   Opacity="0.6"
                                   FontSize="12"
                                   Margin="0,0,0,16" />

                        <!-- Length slider -->
                        <TextBlock Margin="0,0,0,4">
                            <Run Text="Password Length: " />
                            <Run Text="{Binding ViewModel.PasswordLength, Mode=OneWay}" FontWeight="SemiBold" />
                        </TextBlock>
                        <Slider Minimum="8"
                                Maximum="128"
                                Value="{Binding ViewModel.PasswordLength}"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                Margin="0,0,0,16" />

                        <!-- Options card -->
                        <ui:Card Padding="12" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Character Options"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8" />
                                <CheckBox Content="Uppercase (A-Z)"
                                          IsChecked="{Binding ViewModel.IncludeUppercase}"
                                          Margin="0,0,0,4" />
                                <CheckBox Content="Lowercase (a-z)"
                                          IsChecked="{Binding ViewModel.IncludeLowercase}"
                                          Margin="0,0,0,4" />
                                <CheckBox Content="Numbers (0-9)"
                                          IsChecked="{Binding ViewModel.IncludeNumbers}"
                                          Margin="0,0,0,4" />
                                <CheckBox Content="Symbols (!@#$%...)"
                                          IsChecked="{Binding ViewModel.IncludeSymbols}"
                                          Margin="0,0,0,4" />
                                <CheckBox Content="Exclude ambiguous characters (0/O, 1/l/I)"
                                          IsChecked="{Binding ViewModel.ExcludeAmbiguous}" />
                            </StackPanel>
                        </ui:Card>

                        <!-- Generate / Copy buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <ui:Button Content="Generate Password"
                                       Appearance="Primary"
                                       Command="{Binding ViewModel.GeneratePasswordCommand}"
                                       Width="150"
                                       Margin="0,0,8,0" />
                            <ui:Button Content="Copy"
                                       Command="{Binding ViewModel.CopyPasswordCommand}"
                                       Width="80" />
                        </StackPanel>

                        <!-- Generated password output -->
                        <TextBox Text="{Binding ViewModel.GeneratedPassword, Mode=OneWay}"
                                 IsReadOnly="True"
                                 FontFamily="Consolas"
                                 FontSize="16"
                                 Padding="12"
                                 TextWrapping="Wrap" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Status bar -->
        <TextBlock Grid.Row="2"
                   Text="{Binding ViewModel.StatusText}"
                   Opacity="0.6"
                   FontSize="12"
                   Margin="0,8,0,0" />
    </Grid>
    </DockPanel>
</Page>
