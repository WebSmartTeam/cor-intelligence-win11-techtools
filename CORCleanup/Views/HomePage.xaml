<Page x:Class="CORCleanup.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:CORCleanup.ViewModels"
      d:DataContext="{d:DesignInstance vm:HomeViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Home">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel MaxWidth="900" Margin="0,0,0,24">

            <!-- ====================================================== -->
            <!-- Hero Branding                                          -->
            <!-- ====================================================== -->
            <Border Margin="0,8,0,24"
                    Padding="32"
                    CornerRadius="8"
                    Background="{DynamicResource ControlFillColorDefaultBrush}">
                <StackPanel HorizontalAlignment="Center">
                    <!-- App Icon -->
                    <ui:SymbolIcon Symbol="WrenchScrewdriver24"
                                  FontSize="48"
                                  HorizontalAlignment="Center"
                                  Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"
                                  Margin="0,0,0,16" />

                    <!-- App Title -->
                    <ui:TextBlock Text="COR Cleanup"
                                 FontTypography="TitleLarge"
                                 HorizontalAlignment="Center" />

                    <!-- Tagline -->
                    <ui:TextBlock Text="All-in-one Windows System Administration Toolkit"
                                 FontTypography="Body"
                                 Opacity="0.7"
                                 HorizontalAlignment="Center"
                                 Margin="0,4,0,0" />

                    <!-- Version + Company -->
                    <ui:TextBlock Text="{Binding VersionLine}"
                                 FontTypography="Caption"
                                 Opacity="0.5"
                                 HorizontalAlignment="Center"
                                 Margin="0,8,0,0" />
                </StackPanel>
            </Border>

            <!-- ====================================================== -->
            <!-- Feature Cards Grid                                     -->
            <!-- ====================================================== -->
            <ui:TextBlock Text="Tools"
                         FontTypography="Subtitle"
                         Margin="0,0,0,12" />

            <UniformGrid Columns="2" Margin="0,0,0,16">

                <!-- Network -->
                <ui:CardAction Margin="0,0,8,8"
                               Command="{Binding NavigateCommand}"
                               CommandParameter="Network">
                    <StackPanel Margin="8">
                        <DockPanel>
                            <ui:SymbolIcon Symbol="Globe24"
                                          DockPanel.Dock="Left"
                                          FontSize="24"
                                          Margin="0,0,12,0"
                                          Foreground="{DynamicResource SystemAccentColorPrimaryBrush}" />
                            <StackPanel>
                                <ui:TextBlock FontTypography="BodyStrong" Text="Network" />
                                <ui:TextBlock FontTypography="Caption" Opacity="0.6"
                                             Text="Ping, Traceroute, DNS, Port Scanner, Wi-Fi" />
                            </StackPanel>
                        </DockPanel>
                    </StackPanel>
                </ui:CardAction>

                <!-- Cleanup -->
                <ui:CardAction Margin="8,0,0,8"
                               Command="{Binding NavigateCommand}"
                               CommandParameter="Cleanup">
                    <StackPanel Margin="8">
                        <DockPanel>
                            <ui:SymbolIcon Symbol="Broom24"
                                          DockPanel.Dock="Left"
                                          FontSize="24"
                                          Margin="0,0,12,0"
                                          Foreground="{DynamicResource SystemAccentColorPrimaryBrush}" />
                            <StackPanel>
                                <ui:TextBlock FontTypography="BodyStrong" Text="Cleanup" />
                                <ui:TextBlock FontTypography="Caption" Opacity="0.6"
                                             Text="Temp files, caches, browser data" />
                            </StackPanel>
                        </DockPanel>
                    </StackPanel>
                </ui:CardAction>

                <!-- Registry -->
                <ui:CardAction Margin="0,0,8,8"
                               Command="{Binding NavigateCommand}"
                               CommandParameter="Registry">
                    <StackPanel Margin="8">
                        <DockPanel>
                            <ui:SymbolIcon Symbol="Key24"
                                          DockPanel.Dock="Left"
                                          FontSize="24"
                                          Margin="0,0,12,0"
                                          Foreground="{DynamicResource SystemAccentColorPrimaryBrush}" />
                            <StackPanel>
                                <ui:TextBlock FontTypography="BodyStrong" Text="Registry" />
                                <ui:TextBlock FontTypography="Caption" Opacity="0.6"
                                             Text="Invalid paths, orphaned keys, cleanup" />
                            </StackPanel>
                        </DockPanel>
                    </StackPanel>
                </ui:CardAction>

                <!-- Uninstaller -->
                <ui:CardAction Margin="8,0,0,8"
                               Command="{Binding NavigateCommand}"
                               CommandParameter="Uninstaller">
                    <StackPanel Margin="8">
                        <DockPanel>
                            <ui:SymbolIcon Symbol="AppsList24"
                                          DockPanel.Dock="Left"
                                          FontSize="24"
                                          Margin="0,0,12,0"
                                          Foreground="{DynamicResource SystemAccentColorPrimaryBrush}" />
                            <StackPanel>
                                <ui:TextBlock FontTypography="BodyStrong" Text="Uninstaller" />
                                <ui:TextBlock FontTypography="Caption" Opacity="0.6"
                                             Text="Remove programs, silent uninstall" />
                            </StackPanel>
                        </DockPanel>
                    </StackPanel>
                </ui:CardAction>

                <!-- Hardware -->
                <ui:CardAction Margin="0,0,8,8"
                               Command="{Binding NavigateCommand}"
                               CommandParameter="Hardware">
                    <StackPanel Margin="8">
                        <DockPanel>
                            <ui:SymbolIcon Symbol="Desktop24"
                                          DockPanel.Dock="Left"
                                          FontSize="24"
                                          Margin="0,0,12,0"
                                          Foreground="{DynamicResource SystemAccentColorPrimaryBrush}" />
                            <StackPanel>
                                <ui:TextBlock FontTypography="BodyStrong" Text="Hardware" />
                                <ui:TextBlock FontTypography="Caption" Opacity="0.6"
                                             Text="System info, RAM, disks, battery" />
                            </StackPanel>
                        </DockPanel>
                    </StackPanel>
                </ui:CardAction>

                <!-- Tools -->
                <ui:CardAction Margin="8,0,0,8"
                               Command="{Binding NavigateCommand}"
                               CommandParameter="Tools">
                    <StackPanel Margin="8">
                        <DockPanel>
                            <ui:SymbolIcon Symbol="Wrench24"
                                          DockPanel.Dock="Left"
                                          FontSize="24"
                                          Margin="0,0,12,0"
                                          Foreground="{DynamicResource SystemAccentColorPrimaryBrush}" />
                            <StackPanel>
                                <ui:TextBlock FontTypography="BodyStrong" Text="Tools" />
                                <ui:TextBlock FontTypography="Caption" Opacity="0.6"
                                             Text="File hash, passwords, BSOD, AV health" />
                            </StackPanel>
                        </DockPanel>
                    </StackPanel>
                </ui:CardAction>

                <!-- Admin -->
                <ui:CardAction Margin="0,0,8,0"
                               Command="{Binding NavigateCommand}"
                               CommandParameter="Admin">
                    <StackPanel Margin="8">
                        <DockPanel>
                            <ui:SymbolIcon Symbol="ShieldTask24"
                                          DockPanel.Dock="Left"
                                          FontSize="24"
                                          Margin="0,0,12,0"
                                          Foreground="{DynamicResource SystemAccentColorPrimaryBrush}" />
                            <StackPanel>
                                <ui:TextBlock FontTypography="BodyStrong" Text="Admin" />
                                <ui:TextBlock FontTypography="Caption" Opacity="0.6"
                                             Text="Services, startup, repair, debloat" />
                            </StackPanel>
                        </DockPanel>
                    </StackPanel>
                </ui:CardAction>

                <!-- Settings -->
                <ui:CardAction Margin="8,0,0,0"
                               Command="{Binding NavigateCommand}"
                               CommandParameter="Settings">
                    <StackPanel Margin="8">
                        <DockPanel>
                            <ui:SymbolIcon Symbol="Settings24"
                                          DockPanel.Dock="Left"
                                          FontSize="24"
                                          Margin="0,0,12,0"
                                          Foreground="{DynamicResource SystemAccentColorPrimaryBrush}" />
                            <StackPanel>
                                <ui:TextBlock FontTypography="BodyStrong" Text="Settings" />
                                <ui:TextBlock FontTypography="Caption" Opacity="0.6"
                                             Text="Theme, about, terms, privacy" />
                            </StackPanel>
                        </DockPanel>
                    </StackPanel>
                </ui:CardAction>

            </UniformGrid>

            <!-- ====================================================== -->
            <!-- Footer                                                 -->
            <!-- ====================================================== -->
            <Border Margin="0,8,0,0"
                    Padding="16"
                    CornerRadius="8"
                    Background="{DynamicResource ControlFillColorDefaultBrush}">
                <DockPanel>
                    <ui:SymbolIcon Symbol="Info24"
                                  DockPanel.Dock="Left"
                                  FontSize="20"
                                  Margin="0,0,12,0"
                                  Opacity="0.5" />
                    <ui:TextBlock FontTypography="Caption"
                                 Opacity="0.5"
                                 VerticalAlignment="Center"
                                 Text="This tool requires administrator privileges for full functionality. Some features like services management, registry editing, and system repair require elevated access." />
                </DockPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
