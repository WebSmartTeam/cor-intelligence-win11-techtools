<Page x:Class="CORCleanup.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Settings">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel MaxWidth="800" Margin="0,0,0,24">

            <!-- ====================================================== -->
            <!-- Page Title                                              -->
            <!-- ====================================================== -->
            <ui:TextBlock FontTypography="Title" Text="Settings" Margin="0,0,0,24" />

            <!-- ====================================================== -->
            <!-- Appearance                                              -->
            <!-- ====================================================== -->
            <ui:Card Margin="0,0,0,16">
                <StackPanel>
                    <ui:TextBlock FontTypography="BodyStrong" Text="Appearance" />
                    <ui:TextBlock FontTypography="Caption" Text="Customise the look and feel of the application" Opacity="0.6" Margin="0,0,0,12" />

                    <DockPanel>
                        <StackPanel DockPanel.Dock="Left">
                            <ui:TextBlock FontTypography="Body" Text="Dark Theme" />
                            <ui:TextBlock FontTypography="Caption"
                                         Text="Use a dark colour scheme for reduced eye strain"
                                         Opacity="0.6" />
                        </StackPanel>
                        <ui:ToggleSwitch DockPanel.Dock="Right"
                                        HorizontalAlignment="Right"
                                        IsChecked="{Binding ViewModel.IsDarkTheme, Mode=TwoWay}" />
                    </DockPanel>
                </StackPanel>
            </ui:Card>

            <!-- ====================================================== -->
            <!-- About                                                   -->
            <!-- ====================================================== -->
            <ui:Card Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel>
                        <ui:TextBlock FontTypography="BodyStrong" Text="About" />
                        <ui:TextBlock FontTypography="Caption" Text="Application and company information" Opacity="0.6" />
                    </StackPanel>

                    <!-- App Identity -->
                    <StackPanel Margin="0,12,0,0">
                        <ui:TextBlock FontTypography="Subtitle" Text="{Binding ViewModel.AppName}" />
                        <ui:TextBlock FontTypography="Body" Text="{Binding ViewModel.AppVersion}" Opacity="0.7" />
                        <ui:TextBlock FontTypography="Caption" Text="All-in-one Windows system administration toolkit" Opacity="0.6" Margin="0,4,0,0" />
                    </StackPanel>

                    <Separator Opacity="0.3" Margin="0,12,0,0" />

                    <!-- Company Details -->
                    <StackPanel Margin="0,12,0,0">
                        <ui:TextBlock FontTypography="BodyStrong" Text="{Binding ViewModel.CompanyName}" />
                        <ui:TextBlock FontTypography="Body" Text="{Binding ViewModel.TradingAs}" Opacity="0.7" Margin="0,4,0,0" />
                        <ui:TextBlock FontTypography="Caption" Text="{Binding ViewModel.CompanyNumber}" Opacity="0.6" Margin="0,4,0,0" />
                        <ui:TextBlock FontTypography="Caption" Text="{Binding ViewModel.VatNumber}" Opacity="0.6" Margin="0,4,0,0" />
                    </StackPanel>

                    <StackPanel Margin="0,12,0,0">
                        <ui:TextBlock FontTypography="Caption" Text="{Binding ViewModel.CompanyAddress}" Opacity="0.6" />
                        <ui:TextBlock FontTypography="Caption" Text="{Binding ViewModel.CompanyPhone}" Opacity="0.6" Margin="0,4,0,0" />
                    </StackPanel>

                    <!-- Action Buttons -->
                    <WrapPanel Margin="0,12,0,0">
                        <ui:Button Appearance="Primary"
                                   Content="Visit Website"
                                   Icon="{ui:SymbolIcon Globe24}"
                                   Command="{Binding ViewModel.OpenWebsiteCommand}"
                                   Margin="0,0,8,0" />
                        <ui:Button Content="Contact Us"
                                   Icon="{ui:SymbolIcon Mail24}"
                                   Command="{Binding ViewModel.OpenEmailCommand}" />
                    </WrapPanel>

                    <Separator Opacity="0.3" Margin="0,12,0,0" />

                    <!-- Copyright -->
                    <ui:TextBlock FontTypography="Caption" Text="{Binding ViewModel.AppCopyright}" Opacity="0.5" Margin="0,12,0,0" />
                </StackPanel>
            </ui:Card>

            <!-- ====================================================== -->
            <!-- Terms and Conditions                                    -->
            <!-- ====================================================== -->
            <ui:Card Margin="0,0,0,16">
                <StackPanel>
                    <ui:TextBlock FontTypography="BodyStrong" Text="Terms and Conditions" />
                    <ui:TextBlock FontTypography="Caption" Text="Terms of use for COR Cleanup" Opacity="0.6" Margin="0,0,0,8" />

                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                            CornerRadius="4"
                            Padding="16">
                        <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding ViewModel.TermsAndConditions}"
                                       TextWrapping="Wrap"
                                       FontFamily="Segoe UI"
                                       FontSize="12"
                                       LineHeight="18"
                                       Opacity="0.8" />
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </ui:Card>

            <!-- ====================================================== -->
            <!-- Privacy Policy                                          -->
            <!-- ====================================================== -->
            <ui:Card Margin="0,0,0,16">
                <StackPanel>
                    <ui:TextBlock FontTypography="BodyStrong" Text="Privacy Policy" />
                    <ui:TextBlock FontTypography="Caption" Text="How COR Cleanup handles your data" Opacity="0.6" Margin="0,0,0,8" />

                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                            CornerRadius="4"
                            Padding="16">
                        <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding ViewModel.PrivacyPolicy}"
                                       TextWrapping="Wrap"
                                       FontFamily="Segoe UI"
                                       FontSize="12"
                                       LineHeight="18"
                                       Opacity="0.8" />
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </ui:Card>

        </StackPanel>
    </ScrollViewer>
</Page>
