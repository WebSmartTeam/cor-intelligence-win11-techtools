<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyName>COR Cleanup</AssemblyName>
    <RootNamespace>CORCleanup</RootNamespace>
    <Version>1.0.13</Version>
    <Company>COR Intelligence</Company>
    <Product>COR Cleanup</Product>
    <Description>All-in-one Windows 11 MSP technician tool by COR Intelligence</Description>
    <Copyright>Copyright Â© COR Intelligence 2026</Copyright>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <ApplicationIcon>Assets\cor-cleanup.ico</ApplicationIcon>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="WPF-UI" Version="4.2.0" />
    <PackageReference Include="WPF-UI.DependencyInjection" Version="4.2.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.1" />
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\cor-cleanup.ico" />
    <Resource Include="Assets\cor-icon.png" />
    <Resource Include="Assets\cor-logo.png" />
    <Resource Include="Assets\cor-intelligence-logo.png" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CORCleanup.Core\CORCleanup.Core.csproj" />
  </ItemGroup>

</Project>
